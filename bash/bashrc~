#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

alias journal='cd ~/Gdrive/journals'
alias log='cd ~/Gdrive/logs'

function daily {
	cd ~/Gdrive/journals/daily  && konsole --fullscreen -e vim "$(date +%F).md" &
}
